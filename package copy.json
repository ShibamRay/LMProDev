{
  "name": "library-management-system",
  "version": "1.0.0",
  "description": "Modern offline Library Management Software built with Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [
    "library",
    "management",
    "electron",
    "sqlite",
    "offline"
  ],
  "author": "Library Management Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "chart.js": "^4.4.1",
    "sqlite3": "^5.1.7"
  },
  "build": {
    "appId": "com.library.management",
    "productName": "Library Management System",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "node_modules/sqlite3/**/*",
      "node_modules/bcryptjs/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/logo/lg_main.png",
      "publisherName": "Library Management Team",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Library Management System"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.exe"
    }
  }
}
